<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:kotifyApp="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/appBackgroundColor"
             android:padding="@dimen/cardViewContainerPadding"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            kotifyApp:cardCornerRadius="@dimen/cornerRadius"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/itemImageWidth"
                    android:layout_height="@dimen/itemImageHeight"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/artistImage"
                    android:layout_marginTop="@dimen/marginTop"
                    kotifyApp:layout_constraintTop_toTopOf="parent"
                    kotifyApp:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginBottom="@dimen/marginBottom"
                    kotifyApp:layout_constraintBottom_toBottomOf="parent"
                    kotifyApp:layout_constraintVertical_bias="0.0"/>

            <TextView
                    tools:text="Джизус"
                    android:textSize="@dimen/titleTextSize"
                    android:id="@+id/artistName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop"
                    kotifyApp:layout_constraintTop_toTopOf="parent"
                    kotifyApp:layout_constraintStart_toEndOf="@+id/artistImage"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginBottom="@dimen/marginBottom"
                    android:layout_marginEnd="@dimen/marginEnd"
                    kotifyApp:layout_constraintEnd_toEndOf="parent"
                    kotifyApp:layout_constraintHorizontal_bias="0.0"
                    kotifyApp:layout_constraintVertical_bias="0.0"
                    kotifyApp:layout_constraintBottom_toTopOf="@+id/guideline"/>
            <TextView
                    android:text="@string/listeners"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:id="@+id/playCountText"
                    android:layout_marginBottom="@dimen/marginBottom"
                    kotifyApp:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/marginTop"
                    kotifyApp:layout_constraintTop_toTopOf="@+id/guideline"
                    kotifyApp:layout_constraintVertical_bias="0.2"
                    android:layout_marginEnd="@dimen/marginBetweenElements"
                    kotifyApp:layout_constraintEnd_toStartOf="@+id/listenersCountNumber"/>
            <TextView
                    tools:text="111111"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/listenersCountNumber"
                    kotifyApp:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/marginBottom"
                    kotifyApp:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/marginEnd"
                    android:layout_marginTop="@dimen/marginTop"
                    kotifyApp:layout_constraintTop_toTopOf="@+id/guideline"
                    kotifyApp:layout_constraintVertical_bias="0.2"
            />
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    kotifyApp:layout_constraintGuide_begin="@dimen/artistGuidlineBeginConstraint"
                    android:id="@+id/guideline"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>